"basic configuration
set nocompatible
syntax on
set showmode
set showcmd
set encoding=utf-8
set t_Co=256
filetype indent on
set mouse=a

"indent configuration
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4

"display configuration
set number
set relativenumber
set cursorline
set textwidth=120
"set wrap
"set linebreak
set nowrap
set laststatus=2
set ruler

"search configuration
set showmatch
set hlsearch
set incsearch
"set ignorecase
"set smartcase

"edit configuration
set spell spelllang=en_us
"set nobackup
"set noswapfile
"set undofile

set noerrorbells
"set visualbell
set history=1000
"set listchars=tab:, trail: 
"set list

set wildmenu
set wildmode=longest:list,full
